<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_my_boards">

    <fragment
        android:id="@+id/nav_my_boards"
        android:name="me.benhunter.accelerate.ui.myboards.MyBoardsFragment"
        android:label="@string/menu_my_boards"
        tools:layout="@layout/fragment_board">
        <!--    TODO update animation?-->
        <action
            android:id="@+id/action_my_boards_to_board"
            app:destination="@id/nav_board"
            app:enterAnim="@android:anim/fade_in"
            app:exitAnim="@android:anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/nav_logout"
        android:name="me.benhunter.accelerate.ui.logout.LogoutFragment"
        android:label="Logout"
        tools:layout="@layout/fragment_logout" />

    <fragment
        android:id="@+id/nav_board"
        android:name="me.benhunter.accelerate.ui.board.BoardFragment"
        android:label="Board"
        tools:layout="@layout/board">
        <argument
            android:name="board_firestore_id"
            app:argType="string" />
        <argument
            android:name="board_name"
            app:argType="string" />
        <action
            android:id="@+id/action_board_to_task"
            app:destination="@+id/nav_task"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
        <action
            android:id="@+id/action_board_to_category"
            app:destination="@+id/nav_category"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/nav_task"
        android:name="me.benhunter.accelerate.ui.task.TaskFragment"
        android:label="Task"
        tools:layout="@layout/fragment_task">
        <argument
            android:name="taskId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/nav_category"
        android:name="me.benhunter.accelerate.ui.category.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category">
        <argument
            android:name="taskId"
            app:argType="string" />
    </fragment>
</navigation>